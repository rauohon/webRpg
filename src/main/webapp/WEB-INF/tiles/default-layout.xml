<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>
	<definition name="layouts-tiles" template="/WEB-INF/views/template/default-layouts.jsp">
	  	<put-attribute name="header"    	value="/WEB-INF/views/template/default-header.jsp" />
	  	<put-attribute name="nav"    		value="/WEB-INF/views/template/default-nav.jsp" />
	  	<put-attribute name="left"    		value="/WEB-INF/views/template/default-left.jsp" />
	  	<put-attribute name="content"   	value="" />
	  	<put-attribute name="footer"    	value="/WEB-INF/views/template/default-footer.jsp" />
	</definition>
	
	<definition name="*.tiles" extends="layouts-tiles">
	  	<put-attribute name="content"   value="/WEB-INF/views/{1}.jsp" />
	</definition>
</tiles-definitions>
